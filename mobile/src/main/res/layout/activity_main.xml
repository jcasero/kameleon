<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    >

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kameleon"
        android:layout_marginTop="@dimen/default_margin"/>

    <TextView
        android:id="@+id/main_title"
        style="@style/Welcome.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_image"
        android:layout_centerHorizontal="true"
        android:text="@string/oh_yeah"/>

    <TextView
        android:id="@+id/main_body"
        style="@style/Welcome.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_title"
        android:layout_centerHorizontal="true"
        android:text="@string/kamaleoning"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_separator"
        android:layout_above="@+id/main_disable"
        android:background="@android:color/white"/>

    <Button
        android:id="@id/main_disable"
        style="@style/Welcome.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/disable"/>
</RelativeLayout>
